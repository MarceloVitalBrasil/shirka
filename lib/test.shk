(=> test/run) [
  (=> assert_equal) [
    -> $assert/op
    (try)    [ $assert/op !  ]
    (rescue) [ abort ]

    length? 2 = not (!?) [abort]

    -- uncons >< uncons >< << ><
    uncons -> result
    uncons -> expected
    <<

    result expected = not (!?) [
      "Equality failed:" puts
      "  Expected: " print expected puts
      "    Result: " print result   puts
      "" puts
    ]
  ]

  (=> assert_error) [
    -> $assert/op
    (try) [ $assert/op ! ]
    :$try/failed =
    (if) [
      [ << ]
      [ <<
        "Error was expected but did not happen:" puts
        "  " print $assert/op puts "" puts ]
    ]
  ]

  "-- Running tests... (Only failed tests are displayed)\n" puts

  !
]